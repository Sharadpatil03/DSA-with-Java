package Sorting_techniques;

import java.util.*;
import java.util.Scanner;

public class Bubble_Sort {
    
    public static void bubbleSort(int []arr){
        int n=arr.length;

        for(int i=n-1; i>=1; i--){  //starting from end

            //now start from start and do adjacent swap if the elements are not in proper form

            for(int j=0; j<=i-1; j++){
                if(arr[j]>arr[j+1]){
                    //swap
                    int temp=arr[j];
                    arr[j]=arr[j+1];
                    arr[j+1]=temp;
                }
            }

        }


    }
    public static void main(String[] args) {
        //Bubble sort : Do the adjacent swap and push the maximum element at the end.

        Scanner sc= new Scanner(System.in);
        int n=sc.nextInt();

        int arr[] =new int[n];

        //taking input array
        for(int i=0; i<n; i++){
            arr[i]=sc.nextInt();
        }

        //Bubble sort call
        bubbleSort(arr);


        //print the sorted element
        for(int i=0; i<n; i++){
            System.out.print(arr[i]+ " ");
        }
    }
}
